<h1>All users:</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
  </tr>

  <tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'edit', edit_user_path(user) %></td>
        <td><%= link_to 'destroy', user_path(user),
          method: :delete,
          data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tr>
</table>

<br><br>
<%= link_to "create user", new_user_path %>